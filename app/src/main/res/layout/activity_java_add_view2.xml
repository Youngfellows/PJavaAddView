<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JavaAddViewActivity2">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/gan_mei_zi" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="4:3" />

            <Button
                android:id="@+id/btn_169"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:9" />

            <Button
                android:id="@+id/btn_marginleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margin Left+" />

            <Button
                android:id="@+id/btn_marginright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margin Right+" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>